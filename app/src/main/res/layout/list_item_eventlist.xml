<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ddd"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

<android.support.v7.widget.CardView
    android:id="@+id/eventCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:elevation="4dp"
        android:padding="16dp">

    <TextView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:textSize="80dp"
        android:id="@+id/fsnLetter"
        android:paddingRight="10dp"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        />


    <TextView
        style="@style/EventCards"
        android:id="@+id/evevTitle"
        android:layout_toRightOf="@+id/fsnLetter"
        android:textStyle="bold"/>

        <View
            android:layout_width="fill_parent"
            android:id="@+id/line"
            android:background="@android:color/darker_gray"
            android:layout_toRightOf="@+id/fsnLetter"
            android:layout_below="@+id/evevTitle"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"/>

    <TextView
        style="@style/EventCards"
        android:id="@+id/evLocation"
        android:layout_toRightOf="@+id/fsnLetter"
        android:layout_below="@+id/line"/>

    <TextView
        style="@style/EventCards"
        android:id="@+id/evTime"
        android:layout_toRightOf="@+id/fsnLetter"
        android:layout_below="@+id/evLocation"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>

    </LinearLayout>