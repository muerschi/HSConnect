<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tiffany.eventsproject.Info_Activity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:background="@color/mediumTourquise"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:padding="40dp"
        >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/hsconnectsymbol_107p"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textMultiLine"
            android:text="HS Connect entstand im Rahmen des Projektseminars Mobile Anwendungen an der Hochschule Mannheim. Mit den aktuellsten Events rund um's Studentenleben, der Zusammenarbeit aller Fakultäten und der passenden Kommunikation im 21.Jahrhundert steht einem gemeinsamen, erlebnisreichen Semester nichts mehr im Wege. Wir wünschen allen Studenten und Studentinnen ein freudiges Connecten!"
            android:textColor="@color/white"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textMultiLine"
            android:layout_marginTop="20dp"
            android:text="HS Connect\nJuni 2017 \nTiffany Kaiser | Nina Mürschberger\nProjektseminar Mobile Anwendunge\nHS Mannheim"
            android:textColor="@color/white"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp"
            android:textAlignment="center"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
