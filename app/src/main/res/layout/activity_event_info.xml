    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tiffany.eventsproject.EventInfo">-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/titleEvent"
            style="@style/EventEditText"
            android:text="@string/date"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/locationEvent"
            style="@style/EventEditText"
            android:text="@string/date"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/EventEditText"
                android:text="am: "
                android:textSize="20dp" />
            <TextView
                android:id="@+id/dateEvent"
                style="@style/EventEditText"
                android:text="@string/date"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/EventEditText"
                android:text="um: "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/timeEvent"
                style="@style/EventEditText"
                android:text="@string/date"
                android:textSize="20dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/descriptionEvent"
            style="@style/EventEditText"
            android:text="@string/date"
            android:textSize="20dp" />


        <fragment
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/fragment"
            android:name="com.example.tiffany.eventsproject.MapsActivity"
            tools:layout="@layout/activity_maps"
            android:layout_width="match_parent"
            android:layout_height="200dp" />


        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/editBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bearbeiten"
                android:visibility="invisible"></Button>

            <Button
                android:id="@+id/deleteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LÃ¶schen"
                android:visibility="invisible"></Button>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
